<controls:MetroWindow x:Class="VirtualFightStick.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:mdix="http://materialdesigninxaml.net/winfx/xaml/themes"
                      xmlns:local="clr-namespace:VirtualFightStick"
                      xmlns:views="clr-namespace:VirtualFightStick.Views"
                      mc:Ignorable="d"
                      Title="Virtual Fight Stick" TitleCaps="False"
                      Height="600" Width="1066"
                      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
                      Background="{DynamicResource MaterialDesignPaper}"
                      FontFamily="{StaticResource DefaultFont}">
    <DockPanel>
        <TabControl>
            <TabItem Header="Controller">
                <views:FightStick />
            </TabItem>
            <TabItem Header="Setup">
                <views:Settings />
            </TabItem>
        </TabControl>
    </DockPanel>
</controls:MetroWindow>
